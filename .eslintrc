{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "strict": [0, "never"],
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-bitwise": 2,
        "curly": [2, "all"],
        "guard-for-in": 2,
        "wrap-iife": [2, "outside"],
        "no-use-before-define": [2, { "functions": true, "classes": true }],
        "new-cap": 2,
        "no-caller": 2,
        "no-empty": 2,
        "no-new": 1,
        "no-plusplus": 2,
        "no-undef": 2,
        "no-unused-vars": [2, { "vars": "all", "args": "after-used" }]
    },
    "globals": {
        "requireNode": false
    }
}
